<h1>Tasty Burgers</h1>

<ul>
  {{#each burgers}}
  <li>
    <p>
      {{burger.id}}. {{burger.burger_name}}

      <button data-planid="{{this.id}}" class="delplan">Devour Burger!</button>
    </p>
  </li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="createplan" class="button-size">
  <textarea type="text" name="plan"></textarea>
  <button type="submit">add burger!</button>
</form>



<script type="text/javascript">
  $(".delplan").on("click", function (event) {
    var id = $(this).data("planid")


    $.ajax("/todos/" + id, {
      type: "DELETE"
    }).then(
      function () {
        console.log("DELETED ID", id);
        location.reload();
      }
    )
  })

  $('#createplan').on("submit", function (event) {
    event.preventDefault();
    var newPlan = {
      plan: $("#createplan [name=plan]").val().trim()

    }
    $.ajax("/todos", {
      type: "POST",
      data: newPlan
    }).then(
      function () {
        console.log("created new BURGER!");
        location.reload();
      }
    )
  })

  $('#updateplan').on('submit', function(event){
    event.preventDefault();
    var id = $("[name=id]").val().trim()

    var updatedPlan = {
      plan: $("#updateplan [name=plan]").val().trim()
    }
    $.ajax('/todos/' + id, {
      type: 'PUT',
      data: updatedPlan
    }).then(
      function(){
        console.log('updated the id', id);
        location.reload();
      }
    )
  })
</script>